<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:icon="@drawable/ic_notifications_black_24dp"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="shopping_sunday_notification"
            app:title="@string/shopping_sunday_notification" />

        <SeekBarPreference
            android:max="10"
            app:dependency="shopping_sunday_notification"
            app:key="shopping_sunday_notification_days"
            app:min="0"
            app:seekBarIncrement="1"
            app:showSeekBarValue="true"
            app:title="Days before shopping Sunday" />

        <com.hedgehog.gdzietabiedra.ui.views.TimePreference
            app:key="notification_time"
            app:dependency="shopping_sunday_notification"
            android:negativeButtonText="@string/cancel"
            android:positiveButtonText="@string/set"
            app:title="@string/notification_time"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="about"
        app:title="About">
        <Preference app:summary="@string/info_text" />
    </PreferenceCategory>

</PreferenceScreen>
